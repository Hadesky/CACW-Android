<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hadesky.cacw.ui.activity.EditMyInfoActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="修改资料"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />
    <RelativeLayout
        android:id="@+id/layout_avatar"
        android:background="@drawable/list_item_bg"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_large">
        <ImageView
            android:id="@+id/iv_avatar"
            android:contentDescription="@string/avatar"
            android:src="@drawable/default_user_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/spacing_small"
            android:layout_width="@dimen/image_more_large"
            android:layout_height="@dimen/image_more_large"/>
        <TextView
            android:text="@string/avatar"
            android:layout_margin="@dimen/spacing_small"
            android:layout_toStartOf="@id/iv_avatar"
            android:layout_toLeftOf="@id/iv_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
