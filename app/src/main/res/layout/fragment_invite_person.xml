<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_primary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_more_small"
            android:background="@drawable/bg_rounded_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_arrow_back"
                android:layout_width="@dimen/image_small"
                android:layout_height="@dimen/image_small"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_small"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_action_back_black"/>

            <com.hadesky.cacw.ui.widget.DeletableEditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/search"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/color_font_gray"
                android:textSize="16sp"
                app:clear_icon="@drawable/ic_clear_black"
                app:paddingEnd="@dimen/spacing_small"
                app:show_underline="false"
                />
        </LinearLayout>
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
