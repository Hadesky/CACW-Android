<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cacw="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/member_size"
    android:layout_height="@dimen/member_size">
    <com.hadesky.cacw.widget.CircleImageView
        android:id="@+id/iv_item_member"
        android:layout_width="@dimen/image_large"
        android:layout_height="@dimen/image_large"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        cacw:border_width="0dp"
        tools:src="@drawable/default_user_image"
        />
    <TextView
        android:id="@+id/tv_item_member"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="用户"
        />
</RelativeLayout>