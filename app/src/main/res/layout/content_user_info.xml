<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/spacing_large"
            style="@style/paddingDividingLine"/>
        <RelativeLayout
            android:background="@drawable/bg_list_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height_large">
            <TextView
                style="@style/tv_item_title_vertical_relative"
                android:text="@string/phone_number"/>
            <TextView
                android:id="@+id/tv_phone"
                tools:text="18825512345"
                style="@style/tv_item_content_vertical_relative"/>
            <ImageButton
                android:id="@+id/bt_sms"
                android:src="@drawable/ic_textsms_black_24dp"
                android:background="@null"
                android:tint="@color/color_sms_yellow"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/image_large"
                android:layout_height="@dimen/image_large"/>
            <ImageButton
                android:id="@+id/bt_call"
                android:src="@drawable/ic_phone_black"
                android:background="@null"
                android:tint="@color/color_primary_dark"
                android:layout_toLeftOf="@id/bt_sms"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/image_large"
                android:layout_height="@dimen/image_large"/>
        </RelativeLayout>
    <ImageView style="@style/paddingDividingLine"/>
        <RelativeLayout
            android:background="@drawable/bg_list_item"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height_large">
            <TextView
                android:text="@string/email"
                style="@style/tv_item_title_vertical_relative"/>

            <TextView
                android:id="@+id/tv_email"
                style="@style/tv_item_content_vertical_relative"
                tools:text="123456789@qq.com"/>
        </RelativeLayout>
        <ImageView style="@style/paddingDividingLine"/>
        <RelativeLayout
            android:background="@drawable/bg_list_item"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height_large">
            <TextView
                android:text="@string/address"
                style="@style/tv_item_title_vertical_relative"/>

            <TextView
                android:id="@+id/tv_address"
                style="@style/tv_item_content_vertical_relative"
                tools:text="广东供热大学"/>
        </RelativeLayout>
</LinearLayout>