<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cacw="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/project_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        cacw:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            style="@style/ActionBarText"
            android:text="项目详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <com.hadesky.cacw.widget.RevScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_project_detail"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.hadesky.cacw.widget.StickView
                    cacw:stick_title="所有任务"
                    android:id="@+id/stick_all"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>
                <!--分割线-->
                <ImageView
                    android:background="@android:color/white"
                    android:src="#ccc"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />

                <com.hadesky.cacw.widget.StickView
                    cacw:stick_title="未完成"
                    android:id="@+id/stick_undo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>

                <!--分割线-->
                <ImageView
                    android:background="@android:color/white"
                    android:src="#ccc"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />

                <com.hadesky.cacw.widget.StickView
                    cacw:stick_title="已完成"
                    android:id="@+id/stick_done"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:gravity="center_vertical"
                android:background="@drawable/list_item_bg"
                >
                <TextView
                    style="@style/textView_item"
                    android:text="项目名称："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_project_detail_pjname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    tools:text="电脑节"
                    />
            </RelativeLayout>
        </LinearLayout>
    </com.hadesky.cacw.widget.RevScrollView>

</LinearLayout>
