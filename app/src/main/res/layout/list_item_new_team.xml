<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_width="@dimen/card_width_normal"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_small"
        >
        <ImageView
            android:id="@+id/iv"
            android:src="@drawable/ic_add_circle_outline"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/image_large"
            android:layout_height="@dimen/image_large"/>
        <TextView
            android:id="@+id/tv"
            android:layout_below="@id/iv"
            android:layout_margin="@dimen/spacing_small"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="@string/new_team"/>
        <TextView
            android:layout_below="@id/tv"
            android:textAppearance="@style/TextAppearance.tips"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/new_team_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

