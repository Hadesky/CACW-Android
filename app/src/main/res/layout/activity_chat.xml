<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cacw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hadesky.cacw.ui.activity.ChatActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            cacw:title=" "
            cacw:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <TextView
                android:id="@+id/tv_chat"
                android:textColor="@android:color/white"
                tools:text="私信"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:windowSoftInputMode="adjustPan"
            />
        <LinearLayout
            android:id="@+id/layout"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_send"
                android:paddingLeft="@dimen/space_normal"
                android:paddingStart="@dimen/space_normal"
                android:paddingRight="70dp"
                android:paddingEnd="70dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:minHeight="@dimen/list_item_height_normal"
                android:maxHeight="@dimen/list_item_height_huge"
                android:imeOptions="actionSend"
                android:layout_height="wrap_content"
                android:hint="@string/input_message"
                tools:text="你好我是张Leaves，我的任务是将这里的字凑够100字，现在好像还没凑够，再试试，现在好像还没凑齐，再试试，现在好像还没凑齐，再试试"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/v_send"
        android:src="@drawable/ic_send_white_24dp"
        cacw:borderWidth="0dp"
        cacw:layout_anchor="@id/rcv_chat"
        cacw:layout_anchorGravity="bottom|right|end"
        android:layout_marginRight="@dimen/space_normal"
        android:layout_marginEnd="@dimen/space_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.design.widget.CoordinatorLayout>
