<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cacw="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_base_window_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        cacw:title="设置"
        cacw:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@android:color/white"
            android:text="@string/setting"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_normal"
        android:background="@drawable/bg_list_item" >
        <TextView
            android:id="@+id/tv_general"
            style="@style/list_item_tv_title_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="通用"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/Me_item_margin_left"
            android:src="@drawable/arrow_right_black"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/bg_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_normal"
        >
        <TextView
            android:id="@+id/tv_receive_alarm"
            style="@style/list_item_tv_title_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="接受新消息提醒"
            />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/Me_item_margin_left"/>
    </RelativeLayout>

    <ImageView style="@style/paddingDividingLine"/>

    <RelativeLayout
        android:background="@drawable/bg_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_normal"
        >
        <TextView
            android:id="@+id/tv_sound"
            style="@style/list_item_tv_title_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="声音"
            />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/Me_item_margin_left"/>
    </RelativeLayout>

    <ImageView style="@style/paddingDividingLine" />

    <RelativeLayout
        android:background="@drawable/bg_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_normal"
        >
        <TextView
            android:id="@+id/tv_vibration"
            style="@style/list_item_tv_title_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="振动"
            />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/Me_item_margin_left"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_about"
        android:layout_marginTop="@dimen/spacing_large"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_normal"
        >
        <TextView
            android:id="@+id/tv_about"
            style="@style/list_item_tv_title_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于"
            />
    </RelativeLayout>

    <ImageView style="@style/paddingDividingLine" />

    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_normal"
        >
        <TextView
            android:id="@+id/tv_exit"
            style="@style/list_item_tv_title_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退出"
            />
    </RelativeLayout>
</LinearLayout>
