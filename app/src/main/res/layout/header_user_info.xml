<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    tools:background="@color/color_font_gray"
    >
    <com.hadesky.cacw.ui.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/image_more_large"
        android:src="@drawable/default_user_image"
        android:layout_height="@dimen/image_more_large"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_alignParentBottom="true"
        app:border_width="0dp"
        app:border_color="@android:color/transparent"
        />
    <TextView
        android:id="@+id/tv_username"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_alignTop="@id/iv_avatar"
        tools:text="小学生"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_large"
        android:textColor="@android:color/white"
        />
    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="@dimen/image_more_small"
        android:layout_height="@dimen/image_more_small"
        android:src="@drawable/ic_sex_level"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/tv_username"
        android:layout_toEndOf="@id/tv_username"
        android:layout_alignTop="@id/tv_username"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        android:contentDescription="@string/sex"/>
    <View
        android:id="@+id/view_line"
        android:background="@android:color/white"
        android:layout_width="@dimen/line_width_normal"
        android:layout_height="1px"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_marginTop="@dimen/spacing_more_large"

        />
    <TextView
        android:id="@+id/tv_summary"
        android:layout_below="@id/view_line"
        android:layout_marginTop="@dimen/spacing_more_small"
        tools:text="这是我的个性签名,我很喜欢打麻将，我很帅，30个字就要凑齐了"
        android:layout_marginLeft="@dimen/image_huge"
        android:layout_marginStart="@dimen/image_huge"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>