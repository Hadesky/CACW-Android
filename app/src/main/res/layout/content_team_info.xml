<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

    <TextView
        android:layout_marginLeft="@dimen/Me_item_margin_left"
        android:textSize="16sp"
        android:text="团队介绍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_team_summary"
        android:textColor="@color/color_font_gray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/Me_item_margin_left"
        android:layout_marginRight="@dimen/Me_item_margin_left"
        android:textSize="14sp"
        android:text="计算机学生会是一个十分坑爹的学生会，里面有很多坑爹的人和坑爹的事，欢迎大家加入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:textSize="16sp"
            android:text="团队成员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_team_member"
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:layout_marginRight="@dimen/Me_item_margin_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>


</LinearLayout>