<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/team_summary"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_bg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

    <TextView
        android:layout_marginLeft="@dimen/Me_item_margin_left"
        android:textSize="16sp"
        android:text="@string/team_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_team_summary"
        android:textColor="@color/color_font_gray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/Me_item_margin_left"
        android:layout_marginRight="@dimen/Me_item_margin_left"
        android:textSize="14sp"
        tool:text="计算机学生会是一个十分坑爹的学生会，里面有很多坑爹的人和坑爹的事，欢迎大家加入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_bg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:textSize="16sp"
            android:text="@string/team_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_team_notice"
            android:textColor="@color/color_font_gray"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:layout_marginRight="@dimen/Me_item_margin_left"
            android:textSize="14sp"
            tool:text="暂无公告"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:textSize="16sp"
            android:text="@string/team_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="2dp"
            android:id="@+id/rcv_team_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_team_project"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:textSize="16sp"
            android:text="团队项目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:textColor="@color/color_font_gray"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/Me_item_margin_left"
            android:layout_marginRight="@dimen/Me_item_margin_left"
            android:textSize="14sp"
            tool:text="3个项目，点击查看"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

</LinearLayout>