<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_base_window_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/tv_teamwork_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="it知识竞赛"
                android:textSize="18sp"
                />

            <TextView
                android:textColor="@android:color/white"
                android:background="#E59903"
                android:id="@+id/tv_date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_teamwork_title"
                android:layout_marginTop="5dp"
                android:text="5-19|13:20"/>

            <TextView
                android:id="@+id/tv_teamwork_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_teamwork_title"
                android:layout_toRightOf="@id/tv_date_and_time"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="计院学生会"/>


            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/iv_teamwork_edit"
                android:background="@drawable/mytask_edit"
                android:layout_width="20dp"
                style="?attr/borderlessButtonStyle"

                android:layout_height="20dp"/>



            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/iv_teamwork_edit"
                android:id="@+id/iv_teamwork_star"
                android:background="@drawable/mytask_star"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <LinearLayout
                android:gravity="center"
                android:layout_below="@id/tv_date_and_time"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="完成"
                    android:drawableLeft="@drawable/mytask_finish"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="成员"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textSize="12sp"

                    android:drawableLeft="@drawable/mytask_member"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"
                    />
                <Button
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="备注"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textSize="12sp"

                    android:drawableLeft="@drawable/mytask_remark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"

                    />
                <Button
                    android:layout_gravity="center_vertical"
                    android:gravity="start|center_vertical"
                    android:text="提醒"
                    android:textSize="12sp"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:drawableLeft="@drawable/mytask_alarm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"
                    />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>

