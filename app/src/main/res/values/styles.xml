<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/color_base_window_background</item>
        <!-- 各控件预设颜色 -->
        <item name="colorControlNormal">@color/color_control_normal</item>
        <!-- 颜色凸显 -->
        <item name="colorAccent">@color/color_accent</item>
        <!--基本字体色调-->
        <item name="android:textColor">@color/color_base_text_color</item>
    </style>

    <style name="BaseActionbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/color_base_window_background</item>
        <!-- 各控件预设颜色 -->
        <item name="colorControlNormal">@color/color_control_normal</item>
        <!-- 颜色凸显 -->
        <item name="colorAccent">@color/color_accent</item>
        <!--基本字体色调-->
        <item name="android:textColor">@color/color_base_text_color</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
    </style>

    <!-- 默认的分割线 -->
    <style name="mDividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ccc</item>
    </style>
    <!--有一点Padding的分割线，必须是ImageView才能套用-->
    <style name="paddingDividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:src">#ccc</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>



    <!-- 登陆注册界面相关 -->
    <style name="EditText_login">
        <item name="android:textColor">#666</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#bbb</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="LoginButton_login">
        <item name="android:textColor">#fff</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="TextAppearance.tips" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_font_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="LinkButton_login">
        <item name="android:textColor">#6495ED</item>
        <item name="android:clickable">true</item>
    </style>
    <!--MainActivity相关-->
    <style name="ActionBarText" >
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Range_PopupWindow_TextView">
    <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
       <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--团队页面专用-->
    <style name="tv_title">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/color_base_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_list_item_title">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_list_item_content">
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--项目页面专用-->
    <style name="tv_project_name">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/color_base_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbar_transparent">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="translucent_status" parent="AppTheme">
    </style>

    <style name="list_item_tv_title_relative">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:textColor">@color/color_base_text_color</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>