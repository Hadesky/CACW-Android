<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/color_base_window_background</item>
        <!-- 各控件预设颜色 -->
        <item name="colorControlNormal">@color/color_control_normal</item>
        <!-- 颜色凸显 -->
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 默认的分割线 -->
    <style name="mDividingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ccc</item>
    </style>

    <!-- 设置等界面每个item相关 -->

    <style name="mTextView_Settings">
        <item name="android:textColor">#333</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <!-- 登陆注册界面相关 -->
    <style name="EditText_login">
        <item name="android:textColor">#666</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">#bbb</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="LoginButton_login">
        <item name="android:textColor">#fff</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_primary</item>
    </style>
    <!--MainActivity相关-->
    <style name="ActionBarText_main" >
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Range_PopupWindow_TextView">
    <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
       <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>